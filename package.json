{
  "name": "s7-hmi",
  "version": "1.0.0",
  "description": "HMI interface for Siemens S7-1200 PLC",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.s7-hmi",
